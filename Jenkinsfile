pipeline {
    agent any
    stages {
        stage('first stage') {
            steps {
                echo "this is first stage"
            }

        }
        stage ('second stage') {
            steps {
                echo "script will start"
                def course = "k8s"
                if (course == "k8s")
                {
                    println (echo "succesfully enrolled to $course")

                }
                else 
                println ("do learn k8s")

                }}
            }

            }
